
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container" id="dvInputForm">
        <form data-bind="submit: saveEmployee">
            <div class="row">
                <div id="saveEmployeeAlert" class="alert" data-bind="css: { 'alert-warning': warningBool() === 1, 'alert-success': warningBool() === 0 }" role="alert" hidden>
                    <span data-bind="text: hasSavedText, style: {color: hasSavedColor ? 'green' : 'red'}"></span>
                </div>
                    <div class="col-lg-3" style="margin-top:10px">First Name:</div><div class="col-lg-3"><input type="text" class="form-control" data-bind="value: firstName" style="margin-top:10px" /></div>
                    <div class="col-lg-3" style="margin-top:10px">Last Name:</div><div class="col-lg-3"><input type="text" class="form-control" data-bind="value: lastName" style="margin-top:10px" /></div>
                </div>
            <div class="row">
                <div class="col-lg-3" style="margin-top:10px">Address:</div><div class="col-lg-9"><input type="text" class="form-control" data-bind="value: address" style="margin-top:10px" /></div>
            </div>
            <div class="row">
                <div class="col-lg-3" style="margin-top:10px">City:</div><div class="col-lg-3"><input type="text" class="form-control" data-bind="value: city" style="margin-top:10px" /></div>
                <div class="col-lg-3" style="margin-top:10px">State:</div><div class="col-lg-3"><input type="text" class="form-control" data-bind="value: state" style="margin-top:10px" /></div>
            </div>
            <div class="row">
                <div class="col-lg-3" style="margin-top:10px">PhoneNumber:</div><div class="col-lg-3"><input type="text" class="form-control" data-bind="value: phoneNumber" style="margin-top:10px" /></div>
                <div class="col-lg-3" style="margin-top:10px">Email:</div><div class="col-lg-3"><input type="text" class="form-control" data-bind="value: email" style="margin-top:10px" /></div>
            </div>
            <div><button type="submit" style="margin-top:10px">Submit</button></div>
            <table class="table table-hover">
                <thead> 
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>PhoneNumber</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: employeeList">
                    <tr>
                        <td data-bind="text: employee().FirstName"></td>
                        <td data-bind="text: employee().LastName"></td>
                        <td data-bind="text: employee().Address"></td>
                        <td data-bind="text: employee().City"></td>
                        <td data-bind="text: employee().State"></td>
                        <td data-bind="text: employee().PhoneNumber"></td>
                        <td data-bind="text: employee().Email"></td>
                        <td><button data-bind="click: EditUser">Edit</button></td>
                        <td><button data-bind="click: deleteUser">Remove</button></td>

                    </tr>
                </tbody>
            </table>
        </form>
        <div class="row">
            <div id="MainGridOuter" style="height: 390px;">
                <table id="MainGrid"></table>
                <div id="pager2"></div>
            </div>
        </div>
        <input type="hidden" data-bind="value: fullName"/>
     </div>

    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/knockout-3.3.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/EmployeeViewScript.js"></script>
       
</body>
</html>
